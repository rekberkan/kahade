modules = ["nodejs-20", "bash"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[userenv]

[userenv.shared]
NODE_ENV = "development"
PORT = "5000"
API_PREFIX = "api/v1"
JWT_SECRET = "kahade-dev-jwt-secret-change-in-production-2024"
JWT_EXPIRATION = "15m"
JWT_REFRESH_SECRET = "kahade-dev-refresh-secret-change-in-production-2024"
JWT_REFRESH_EXPIRATION = "7d"
CORS_ORIGIN = "*"
ENABLE_SWAGGER = "true"
LOG_LEVEL = "debug"
REDIS_ENABLED = "false"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend API"

[[workflows.workflow]]
name = "Backend API"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./kahade-backend/run-app.sh"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "./kahade-backend/run-app.sh"]
