// ============================================================================
// BASE CONFIGURATION
// ============================================================================

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// ENUMS
// ============================================================================

enum InitiatorRole {
  BUYER
  SELLER
}

enum OrderCategory {
  ELECTRONICS
  SERVICES
  DIGITAL_GOODS
  PHYSICAL_GOODS
  OTHER
}

enum Currency {
  IDR
  USD
}

enum FeePayer {
  BUYER
  SELLER
  FIFTY_FIFTY
}

enum OrderStatus {
  PENDING_ACCEPT
  ACCEPTED
  PAID
  COMPLETED
  CANCELLED
  DISPUTED
  REFUNDED
}

enum EscrowHoldStatus {
  ACTIVE
  RELEASED
  REFUNDED
  DISPUTED
  ADJUSTED
}

enum DisputeStatus {
  OPEN
  RESPONDED
  ESCALATED
  UNDER_ARBITRATION
  DECIDED
  APPEALED
  CLOSED
}

enum DisputeDecision {
  NONE
  RELEASE_ALL_TO_SELLER
  REFUND_ALL_TO_BUYER
  SPLIT_SETTLEMENT
  CANCEL_VOID
}

enum KYCStatus {
  NONE
  PENDING
  VERIFIED
  REJECTED
}
