// Notification models

model Notification {
  id      String           @id @default(uuid())
  type    NotificationType
  title   String
  message String
  read    Boolean          @default(false)
  
  // Metadata
  metadata Json?
  
  // User relation
  userId String
  user   User   @relation(fields: [userId], references: [id])
  
  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId])
  @@index([read])
  @@map("notifications")
}
