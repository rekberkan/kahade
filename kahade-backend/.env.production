# Production Environment Configuration

NODE_ENV=production
PORT=3000
API_PREFIX=api/v1

# Database
DATABASE_URL=postgresql://kahade_prod:CHANGE_THIS_PASSWORD@prod-db:5432/kahade_production?schema=public

# JWT
JWT_SECRET=CHANGE_THIS_SUPER_SECRET_KEY_IN_PRODUCTION
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=CHANGE_THIS_REFRESH_SECRET_IN_PRODUCTION
JWT_REFRESH_EXPIRATION=7d

# Redis
REDIS_HOST=prod-redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_REDIS_PASSWORD
REDIS_DB=0

# Blockchain (Mainnet)
BLOCKCHAIN_NETWORK=mainnet
BLOCKCHAIN_RPC_URL=https://mainnet.infura.io/v3/YOUR_PRODUCTION_INFURA_KEY
SMART_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
PRIVATE_KEY=YOUR_PRODUCTION_PRIVATE_KEY

# Payment Gateway (Production)
PAYMENT_GATEWAY_API_KEY=production-api-key
PAYMENT_GATEWAY_SECRET=production-secret
PAYMENT_CALLBACK_URL=https://api.kahade.com/api/v1/payments/callback
PAYMENT_ENVIRONMENT=production

# Email
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=noreply@kahade.com
MAIL_PASSWORD=CHANGE_EMAIL_PASSWORD
MAIL_FROM=noreply@kahade.com

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads

# Security
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=30
CORS_ORIGIN=https://kahade.com,https://www.kahade.com

# Logging
LOG_LEVEL=warn
