# Staging Environment Configuration

NODE_ENV=staging
PORT=3000
API_PREFIX=api/v1

# Database
DATABASE_URL=postgresql://kahade_user:staging_password@staging-db:5432/kahade_staging?schema=public

# JWT
JWT_SECRET=staging-jwt-secret-change-this
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=staging-refresh-secret-change-this
JWT_REFRESH_EXPIRATION=7d

# Redis
REDIS_HOST=staging-redis
REDIS_PORT=6379
REDIS_PASSWORD=staging-redis-password
REDIS_DB=0

# Blockchain (Sepolia Testnet)
BLOCKCHAIN_NETWORK=sepolia
BLOCKCHAIN_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
SMART_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
PRIVATE_KEY=your-staging-private-key

# Payment Gateway (Sandbox)
PAYMENT_GATEWAY_API_KEY=staging-api-key
PAYMENT_GATEWAY_SECRET=staging-secret
PAYMENT_CALLBACK_URL=https://staging-api.kahade.com/api/v1/payments/callback
PAYMENT_ENVIRONMENT=sandbox

# Email
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=staging@kahade.com
MAIL_PASSWORD=staging-email-password
MAIL_FROM=noreply@staging.kahade.com

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads

# Security
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=50
CORS_ORIGIN=https://staging.kahade.com

# Logging
LOG_LEVEL=info
